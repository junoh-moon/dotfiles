{
  "playwright": {
    "type": "stdio",
    "command": "uvx",
    "args": [
      "playwright-server"
    ]
  },
  "context7": {
    "type": "http",
    "url": "https://mcp.context7.com/mcp"
  },
  "notion": {
    "type": "http",
    "url": "https://mcp.notion.com/mcp"
  },
  "codex": {
    "type": "stdio",
    "command": "codex",
    "args": ["mcp-server"]
  },
  "serena": {
    "type": "stdio",
    "command": "uvx",
    "args": [
      "--from", "git+https://github.com/oraios/serena",
      "serena",
      "start-mcp-server",
      "--context", "claude-code",
      "--project-from-cwd",
      "--enable-web-dashboard", "False"
    ]
  }
}
