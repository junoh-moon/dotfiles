{
	"suggest.noselect": true,
	"languageserver": {
		"ocaml-lsp": {
			"command": "opam",
			"args": [
				"config",
				"exec",
				"--",
				"ocamllsp"
			],
			"filetypes": [
				"ocaml",
				"reason"
			]
		}
	},
	"clangd.arguments": [
		"-cross-file-rename"
	],
	"java.format.enabled": true,
	"java.format.comments.enabled": true,
	"java.format.settings.url": "https://gist.githubusercontent.com/snowphone/3687b5a6bee7ad315cf6417e2cd0dddf/raw/26b97d16e2108032c8abdd8c2e8c92a13211916d/formatting-style.xml",
	"java.format.settings.profile": "FormattingStyle",
	"java.codeGeneration.toString.codeStyle": "STRING_FORMAT",
	"java.codeGeneration.useBlocks": true,
	"java.codeGeneration.hashCodeEquals.useJava7Objects": true,
	"java.codeGeneration.hashCodeEquals.useInstanceof": true,
	"elixir.pathToElixirLS": "~/.elixir-ls/release/language_server.sh",
	"elixirLS.dialyzerEnabled": false,
	"rust-analyzer.rustfmt.overrideCommand": [
		"rustfmt",
		"--config",
		"hard_tabs=true"
	],
	"python.formatting.provider": "black",
	"python.pythonPath": "python3",
	"pyright.organizeimports.provider": "isort",
	"python.sortImports.path": "isort",
	"python.sortImports.args": [
		"--profile=black",
		"--force-grid-wrap=2",
		"--multi-line=VERTICAL_HANGING_INDENT",
	],
	"snippets.ultisnips.enable": false
}
