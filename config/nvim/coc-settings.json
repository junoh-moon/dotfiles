{
	"bashIde.shfmt.languageDialect": "bash",
	"clangd.arguments": [
		"-cross-file-rename"
	],
	"clangd.fallbackFlags": [
		"-std=c++17",
		"-std=c++11"
	],
	"elixir.pathToElixirLS": "~/.elixir-ls/release/language_server.sh",
	"elixirLS.dialyzerEnabled": false,
	"inlayHint.display": true,
	"inlayHint.enable": true,
	"inlayHint.enableParameter": true,
	"java.codeGeneration.hashCodeEquals.useInstanceof": true,
	"java.codeGeneration.hashCodeEquals.useJava7Objects": true,
	"java.codeGeneration.toString.codeStyle": "STRING_FORMAT",
	"java.codeGeneration.useBlocks": true,
	"java.format.comments.enabled": true,
	"java.format.enabled": true,
	"java.format.settings.profile": "FormattingStyle",
	"java.format.settings.url": "https://gist.githubusercontent.com/snowphone/3687b5a6bee7ad315cf6417e2cd0dddf/raw/26b97d16e2108032c8abdd8c2e8c92a13211916d/formatting-style.xml",
	"languageserver": {
		"bazel": {
			"args": [],
			"command": "bazel-lsp",
			"filetypes": [
				"bzl",
				"BUILD",
				"BUILD.bzl",
				"BUILD.bazel",
				"MODULE",
				"WORKSPACE"
			],
			"rootPatterns": [
				"WORKSPACE",
				"MODULE"
			]
		},
		"kotlin-lsp": {
			"args": [
				"--stdio"
			],
			"command": "kotlin-lsp.sh",
			"filetypes": [
				"kotlin"
			],
			"root_markers": [
				"build.gradle",
				"build.gradle.kts",
				"pom.xml"
			]
		},
		"ocaml-lsp": {
			"args": [
				"config",
				"exec",
				"--",
				"ocamllsp"
			],
			"command": "opam",
			"filetypes": [
				"ocaml",
				"reason"
			]
		},
		"scheme": {
			"command": "chicken-lsp-server",
			"filetypes": [
				"scheme"
			]
		}
	},
	"markdownlint.config": {
		"MD007": {
			"indent": 4
		},
		"MD013": false,
		"MD036": false,
		"default": true
	},
	"pyright.inlayHints.functionReturnTypes": true,
	"pyright.inlayHints.variableTypes": true,
	"pyright.organizeimports.provider": "isort",
	"python.formatting.provider": "black",
	"python.pythonPath": "python3",
	"python.sortImports.args": [
		"--profile=black",
		"--force-grid-wrap=2",
		"--multi-line=VERTICAL_HANGING_INDENT"
	],
	"python.sortImports.path": "isort",
	"rust-analyzer.rustfmt.overrideCommand": [
		"rustfmt",
		"--config",
		"hard_tabs=true"
	],
	"suggest.noselect": true,
	"typescript.format.enable": false,
	"workspace.ignoredFolders": [
		"$HOME/.cargo/**",
		"$HOME/.rustup/**",
		"$HOME/pkg/mod/**",
		"$HOMEBREW_PREFIX/**"
	],
	"workspace.workspaceFolderFallbackCwd": true,
	"yaml.schemas": {
		"kubernetes": "/*.yaml"
	}
}
