{
	"$schema": "https://opencode.ai/config.json",
	"mcp": {
		"context7": {
			"type": "local",
			"enabled": true,
			"command": [
				"npx",
				"-y",
				"@upstash/context7-mcp"
			]
		},
		"playwright-browser": {
			"type": "local",
			"enabled": true,
			"command": [
				"uvx",
				"playwright-server"
			]
		},
		"sequential-thinking": {
			"type": "local",
			"enabled": true,
			"command": [
				"npx",
				"-y",
				"@modelcontextprotocol/server-sequential-thinking"
			]
		}
	},
}
