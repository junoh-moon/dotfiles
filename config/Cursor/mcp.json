{
	"mcpServers": {
		"notionApi": {
			"command": "npx",
			"args": [
				"-y",
				"@notionhq/notion-mcp-server"
			]
		},
		"iterm-mcp": {
			"command": "npx",
			"args": [
				"-y",
				"iterm-mcp"
			]
		},
		"playwright-browser": {
			"command": "uvx",
			"args": [
				"playwright-server"
			]
		},
		"kubernetes": {
			"command": "npx",
			"args": [
				"-y",
				"kubernetes-mcp-server@latest"
			]
		},
		"sequential-thinking": {
			"command": "npx",
			"args": [
				"-y",
				"@modelcontextprotocol/server-sequential-thinking"
			]
		},
		"time": {
			"command": "uvx",
			"args": [
				"mcp-server-time",
				"--local-timezone",
				"Asia/Seoul"
			]
		},
		"naverSearch": {
			"command": "uv",
			"args": [
				"run",
				"python",
				"-m",
				"mcp-naver.hosts.cursor"
			]
		}
	}
}
